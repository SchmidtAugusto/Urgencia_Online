<div class="waitlist-page container">
  <div class="waitlist-card">
    <h1>Waitlist</h1>
    <div class="waitlist-info d-flex justify-content-around">
      <div class="position">
        <h2>Your Position:</h2>
        <p><%= @appointment.position %></p>
      </div>

      <div class="wait-time">
        <h2>Estimated Wait Time:</h2>
        <p><%= @appointment_queue_duration %></p>
      </div>
    </div>

    <div class="map-container">
      <div style="width: 100%; height: 600px;"
           data-controller="map"
           data-map-markers-value="<%= @markers.to_json %>"
           data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
      <%# <%= image_tag "MapsHospital2.png" %>
    </div>
  </div>
</div>
