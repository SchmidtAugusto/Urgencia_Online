<div class="container-login">
    <h2 class="text-center">Inscrever-se</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  label: "Nome",
                  input_html: { autocomplete: "first_name"}%>
      <%= f.input :last_name,
                  required: true,
                  label: "Sobrenome",
                  autofocus: true,
                  input_html: { autocomplete: "last_name" }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :cpf,
                  required: true,
                  label: "CPF",
                  autofocus: true,
                  input_html: { autocomplete: "cpf" }%>
      <%= f.input :birthdate,
                  as: :date,
                  start_year: Date.today.year - 120,
                  end_year: Date.today.year,
                  order: [:day, :month, :year],
                  required: true,
                  label: "Data de nascimento  ",
                  autofocus: true,
                  input_html: { autocomplete: "birthdate" }%>
      <%= f.input :address,
                  required: true,
                  label: "EndereÃ§o",
                  autofocus: true,
                  input_html: { autocomplete: "address" }%>
      <%= f.input :password,
                  required: true,
                  label: "Senha",
                  hint: ("MÃ­nimo de #{@minimum_password_length} caracteres" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  label: "Confirme a senha",
                  input_html: { autocomplete: "new-password" } %>
      <div class="btn-primary">
        <%= f.button :submit, "Cadastrar", class: "mb-3" %>
        <%= render "devise/shared/links" %>
      </div>
      <% end %>
    </div>
</div>
